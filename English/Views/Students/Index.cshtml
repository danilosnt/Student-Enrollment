@model IEnumerable<StudentEnrollment.Models.Student>


@{
    ViewData["Title"] = "Student List";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1><i class="fa-solid fa-users"></i> @ViewData["Title"]</h1>
    <a asp-action="Create" class="btn btn-primary"><i class="fa-solid fa-plus"></i> New Student</a>
</div>


<form asp-action="Index" method="get" class="mb-4">
    <div class="input-group">
        <input type="text" name="searchTerm" class="form-control" placeholder="Search by name, CPF, or address..." value="@ViewContext.HttpContext.Request.Query["searchTerm"]" />
        <button class="btn btn-outline-secondary" type="submit"><i class="fa-solid fa-magnifying-glass"></i> Search</button>
    </div>
</form>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 col-lg-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Name)</h5>
                    <h6 class="card-subtitle mb-2 text-muted">
                        <i class="fa-solid fa-id-card"></i> @Html.DisplayFor(modelItem => item.CPF)
                    </h6>
                    <p class="card-text flex-grow-1">
                        <small class="d-block"><i class="fa-solid fa-location-dot"></i> @Html.DisplayFor(modelItem => item.Address)</small>
                        <small class="d-block"><i class="fa-solid fa-graduation-cap"></i> Completion: @item.CompletionDate.ToString("dd/MM/yyyy")</small>
                    </p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary btn-sm"><i class="fa-solid fa-pencil"></i> Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm"><i class="fa-solid fa-circle-info"></i> Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger btn-sm" onclick="return confirm('Are you sure you want to delete the student @item.Name?');"><i class="fa-solid fa-trash"></i> Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>